<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashThene" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="button_style" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/averia_sans_libre</item>
        <item name="android:background">@drawable/white_border_button</item>

    </style>

    <style name="button_green_style" >
        <item name="android:textColor">@color/white</item>
